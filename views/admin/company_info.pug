extends ../layouts/main
block content
      // Content Wrapper. Contains page content
      .content-wrapper
        // Content Header (Page header)
        section.content-header
         .container-fluid
            .row.mb-2
                .col-sm-6
                    h1 Company Information
                .col-sm-6
                    ol.breadcrumb.float-sm-right
                        li.breadcrumb-item
                            a(href='/admin/dashboard') Home
                        li.breadcrumb-item.active Company Information
        section.content
            .row
                // form start
                .col-md-12
                    // general form elements
                    form(action='/admin/company_info/'+info._id, method='POST', enctype="multipart/form-data", role='form')
                        .card.card-primary
                            // /.card-header
                            .card-body
                                img(src="/"+info.image ,style="width:200px; height:100px")
                                .form-group
                                    label(for='inpFile') Product Images
                                    .input-group
                                        .custom-file
                                            input(type="hidden" value=info.image name='image')
                                            input#inpFile.custom-file-input(type='file',name='company_image' multiple)
                                            label.custom-file-label(for='exampleInputFile') Choose file
                                .form-group
                                    label(for='productName') Phone Number
                                    //- input(data-role="tagsinput")
                                    input#productName.form-control(type='text',value=info.phone,required, name='phone')
                                .form-group
                                    label(for='exampleInputEmail1') Tax
                                    input#exampleInputEmail1.form-control(type='number',value=info.tax,required, name='tax')
                                .form-group
                                    label(for='productName') Facebook Url
                                    //- input(data-role="tagsinput")
                                    input#productName.form-control(type='text',value=info.fb_url,required, name='fb_url')
                                .form-group
                                    label(for='productName') Map Url
                                    //- input(data-role="tagsinput")
                                    input#productName.form-control(type='text',value=info.map_url,required, name='map_url')
                                .form-group
                                    label(for='productName') Messenger Url
                                    //- input(data-role="tagsinput")
                                    input#productName.form-control(type='text',value=info.messenger_url,required, name='messenger_url')
                        .card.card-outline
                            .card-header
                                h3.card-title
                                    | Company Description
                                // tools box
                                .card-tools
                                    button.btn.btn-tool.btn-sm(type='button', data-card-widget='collapse', data-toggle='tooltip', title='Collapse')
                                        i.fas.fa-minus
                                    button.btn.btn-tool.btn-sm(type='button', data-card-widget='remove', data-toggle='tooltip', title='Remove')
                                        i.fas.fa-times
                                // /. tools
                                // /.card-header
                            .card-body.pad
                                .mb-3
                                    textarea.textarea(name='description',required, placeholder='Place some text here', style='width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;') #{info.description}
                            .card-header
                                h3.card-title
                                    | Company Address
                                // tools box
                                .card-tools
                                    button.btn.btn-tool.btn-sm(type='button', data-card-widget='collapse', data-toggle='tooltip', title='Collapse')
                                        i.fas.fa-minus
                                    button.btn.btn-tool.btn-sm(type='button', data-card-widget='remove', data-toggle='tooltip', title='Remove')
                                        i.fas.fa-times
                                // /. tools
                                // /.card-header
                            .card-body.pad
                                .mb-3
                                    textarea.textarea(name='address',required, style='width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;') #{info.description}

                            .card-footer
                                button.btn.btn-primary(type='submit') Submit


    
