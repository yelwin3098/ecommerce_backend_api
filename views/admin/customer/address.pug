extends ../../layouts/main
block content
      // Content Wrapper. Contains page content
      .content-wrapper
        // Content Header (Page header)
        section.content-header
         .container-fluid
            .row.mb-2
                .col-sm-6
                    h1 Customers
                .col-sm-6
                    ol.breadcrumb.float-sm-right
                        li.breadcrumb-item
                            a(href='/admin/dashboard') Home
                        li.breadcrumb-item.active Customer List 
        section.content
            .row
                .col-12
                    .card
                        .card-body
                            table#example1.table.table-bordered.table-striped
                                thead
                                    tr  
                                        th #
                                        th Customer Name
                                        th Phone
                                        th Address
                                tbody
                                    each addr, i in addresses
                                            tr
                                                td #{i + 1}
                                                td #{addr.userId.username}
                                                td #{addr.userId.mobile}
                                                td #{addr.address[0].houseNo}, #{addr.address[0].street}
                                                
                                        
                            // /.card-body


    
