extends ../layouts/main
block content
      // Content Wrapper. Contains page content
      .content-wrapper
        // Content Header (Page header)
        .content-header
          .container-fluid
            .row.mb-2
              .col-sm-6
                h1.m-0.text-dark Dashboard
              // /.col
              .col-sm-6
                ol.breadcrumb.float-sm-right
                  li.breadcrumb-item
                    a(href='#') Home
                  li.breadcrumb-item.active Dashboard
                  // /.col
                  // /.row
                  // /.container-fluid
                  // /.content-header
                  // /.content-wrapper
                  // Control Sidebar
        section.content
          .container-fluid
            // Info boxes
            .row
              .col-12.col-sm-6.col-md-4
                .info-box
                  span.info-box-icon.bg-info.elevation-1
                    i.fas.fa-dice-d6
                  .info-box-content
                    span.info-box-text Orders
                    span.info-box-number
                      | #{carts.length}
                  // /.info-box-content
                  // /.info-box
                  // /.col
              .clearfix.hidden-md-up
              .col-12.col-sm-6.col-md-4
                .info-box.mb-3
                  span.info-box-icon.bg-success.elevation-1
                    i.fas.fa-shopping-cart
                  .info-box-content
                    span.info-box-text Order Accepted
                    span.info-box-number #{orders.length}
                  // /.info-box-content
                  // /.info-box
                  // /.col
              .col-12.col-sm-6.col-md-4
                  .info-box.mb-3
                    span.info-box-icon.bg-warning.elevation-1
                      i.fas.fa-users
                    .info-box-content
                      span.info-box-text Customers
                      span.info-box-number #{customers.length}
            .row
                .col-12
                    .card
                        .card-body
                            table#example1.table.table-bordered.table-striped
                                thead
                                    tr  
                                        th #
                                        th OrderCode
                                        th Customer
                                        th Phone No:
                                        th Date
                                        th Action
                                        //- th 
                                        //-     a.btn.btn-sm.btn-success.ml-4(href='/admin/product_create')
                                        //-         i.fas.fa-plus
                                tbody
                                    each order, i in orders
                                            tr
                                                td #{i + 1}
                                                td #{order.orderNumber}
                                                td #{order.userId.username}
                                                td #{order.userId.mobile}
                                                td #{order.updatedAt.toISOString()}
                                                td  
                                                    a.btn.btn-sm.btn-warning.mr-2(href='/admin/order_detail/'+order._id)
                                                        i.fas.fa-list
