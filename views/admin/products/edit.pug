extends ../../layouts/main
block content
      // Content Wrapper. Contains page content
      .content-wrapper
        // Content Header (Page header)
        section.content-header
         .container-fluid
            .row.mb-2
                .col-sm-6
                    h1 Product Update
                .col-sm-6
                    ol.breadcrumb.float-sm-right
                        li.breadcrumb-item
                            a(href='/admin/dashboard') Home
                        li.breadcrumb-item.active Product Update 
        section.content
            .row
                // form start
                .col-md-12
                    // general form elements
                    form(action='/admin/product/edit/'+product._id, method='POST',enctype="multipart/form-data", role='form')
                        .card.card-primary
                            // /.card-header
                            .card-body
                                .form-group
                                    label(for='productName') Product Name
                                    //- input(data-role="tagsinput")
                                    input#productName.form-control(type='text',required, value=product.name, name='name', placeholder='Enter Product Name')
                                .form-group
                                    label(for='exampleInputEmail1') Price
                                    input#exampleInputEmail1.form-control(type='number',value=product.price, required, name='price', placeholder='Enter Price')
                                .form-group
                                    label Category
                                    select.form-control.select2(name='categoryId',style='width: 100%;')
                                        option(selected=product.categoryId._id ,value=product.categoryId._id) #{product.categoryId.name}
                                        each cat, i in categories
                                            option(value=cat._id)  #{cat.name}
                                .form-group
                                    label(for='inpFile') Product Images
                                    .input-group
                                        .custom-file
                                            input#inpFile.custom-file-input(type='file', name='product_img' multiple)
                                            label.custom-file-label(for='exampleInputFile') Choose file
                                .form-group
                                    label(for='exampleInputEmail1') Stock
                                    input#exampleInputEmail1.form-control(type='number',value=product.stock, required, name='stock', placeholder='Stock')
                        .card.card-outline
                            .card-header
                                h3.card-title
                                    | Product Description
                                // tools box
                                .card-tools
                                    button.btn.btn-tool.btn-sm(type='button', data-card-widget='collapse', data-toggle='tooltip', title='Collapse')
                                        i.fas.fa-minus
                                    button.btn.btn-tool.btn-sm(type='button', data-card-widget='remove', data-toggle='tooltip', title='Remove')
                                        i.fas.fa-times
                                // /. tools
                                // /.card-header
                            .card-body.pad
                                .mb-3
                                    textarea.textarea(name='description',required, placeholder='Place some text here', style='width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;') #{product.description}

                            .card-footer
                                button.btn.btn-primary(type='submit') Submit


    
